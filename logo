<div class="container">
    <div id="gif-container">
        </div>
    <br>
    <button onclick="getRandomGif()">再看一個！</button>
</div>

<script>
    const gifs = [
        "https://hinhnenonline.com/wp-content/uploads/2025/01/doraemon-gif-1.gif",
        "https://hinhnenonline.com/wp-content/uploads/2025/01/doraemon-gif-2.gif",
        "https://hinhnenonline.com/wp-content/uploads/2025/01/doraemon-gif-3.gif",
        "https://hinhnenonline.com/wp-content/uploads/2025/01/doraemon-gif-4.gif",
        "https://hinhnenonline.com/wp-content/uploads/2025/01/doraemon-gif-5.gif",
        "https://hinhnenonline.com/wp-content/uploads/2025/01/doraemon-gif-6.gif",
        "https://hinhnenonline.com/wp-content/uploads/2025/01/doraemon-gif-7.gif"
    ];

    function getRandomGif() {
        const randomIndex = Math.floor(Math.random() * gifs.length);
        const container = document.getElementById('gif-container');
        container.innerHTML = `<img src="${gifs[randomIndex]}" alt="Doraemon GIF">`;
    }

    // 初始載入
    getRandomGif();
</script>

